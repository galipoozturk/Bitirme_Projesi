@model NTierSample.Model.Entities.ShoppingList

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>

<h4>ShoppingList</h4>
<hr />
@using (Html.BeginForm("Create", "ShoppingLists", FormMethod.Post))
    {

    <table class="table">
        <thead>
            <tr>
                <th>
                   <span>Ürün Adı</span>
                </th>
                <th>
                    <span>Görsel</span>
                </th>
                <th>
                    <span>Açıklama</span>
                </th>
                <th>
                    <span>Listeye Ekle</span>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Product.Name)
                    </td>
                    <td style="width:100px">
                        <img src="@(item.Product.Image)" style="width:75px;height:75px" />
                    </td>
                    <td>
                        @Html.EditorFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.EditorFor(modelItem => item.IsActive)
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="row">
        <div class="col-md-4">

                <div class="form-group">
                    @Html.TextBoxFor(m => m.Name)
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
        </div>
    </div>
   
    }
    <br/>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>
